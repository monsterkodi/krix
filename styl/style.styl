.popup
    position            absolute
    background-color    #222
    border-radius       3px

.popupWindow
    background-color    #222
    
.popupItem
    color               #888
    padding             2px
    padding-left        2 * frameWidth
    padding-right       2 * frameWidth + 70px
    cursor              pointer
    &:last-child
        padding-bottom  frameWidth
    &:first-child
        padding-top     frameWidth
    &:not(:last-child)
        border-bottom       1px solid #222
    &.selected
        color           #fff

.popupItem:active
    color               #ff0

.popupCombo
    color               #333
    position            absolute
    right               2 * frameWidth

