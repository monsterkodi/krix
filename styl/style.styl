.song
    position            absolute
    top                 frameWidth
    left                189px
    height              172px
    right               0
    background-color    #000
    border-radius       3px
    
.songInfo
    position            absolute
    right               0
    top                 0
    bottom              0
    background          rgba(0,0,0,0)
    
.songElapsed
.songDuration
    padding-left        frameWidth
    padding-right       frameWidth
    position            absolute
    font-size           14px
    font-weight         bold
    color               #333
    background          #000
    right               0px

.songElapsed
    top                 0px
    padding-top         frameWidth
    border-bottom-left-radius  frameWidth

.songDuration
    border-top-left-radius     frameWidth
    bottom              0px
    padding-bottom      frameWidth

.wave
    position            absolute
    top                 frameWidth
    left                182px
    right               frameWidth
    height              160px
    overflow            hidden
    opacity             0.25
    cursor              crosshair

.waveLine 
    position            absolute
    top                 0
    bottom              0
    width               2px
    background-color    rgba(255,255,255,0.14)

.waveBlend
    position            absolute
    top                 0
    left                0
    height              160px
    background-color    rgba(19,19,19,0.6)
        
