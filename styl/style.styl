.tiles
    background          #000
    overflow-y          scroll
    padding-top         frameWidth
    padding-left        frameWidth
    padding-bottom      frameWidth
    position            absolute
    top                 184px
    bottom              0
    left                0
    right               0

.tile                       
    display             inline-block
    padding             0
    margin              0
    
.tileSqr
    cursor              default
.playlistName
    cursor              pointer
            
.tilePad                    
    display             inline-block
    padding             frameWidth
    border-radius       3px
        
.tilePadDir                 
.tilePadPlaylist
    border-radius       5px
        
.tileSqrDir                 
.tileSqrPlaylist
    padding             frameWidth
    overflow            hidden
    border-radius       0px
    
.tileSqrDir                 
    background-color    rgba(0,0,0,0.7)
.tileSqrPlaylist
    background-color    rgba(255,0,0,0.5)
    
// hide playlist info and name of tiles with covers

.tileSqrCover               
.playlistInfo
    opacity             0 

// focus tiles show playlist info and name of tiles with covers

.tilePadFocus .tileSqrCover 
.tilePadFocus .playlistInfo  
    opacity             1.0

// focus tile border color
    
.tilePadFocus               
    background-color        #44a
    &.tilePadDir    
        background-color    #333
    &.tilePadPlaylist 
        background-color    #a00
    
.tileArtist                 
    color               #88f

.tileChild
    color               #fa0
    
.playlistInfo
    padding             frameWidth
    color               #b00
    font-weight         bold
    font-size           12px
    cursor              default
    & .playlistTime
        float           right
    
.tileImgDir                
.tileImgPlaylist
    border-radius       3px

.tileImg
    background-color    rgba(0,0,100,0.5)
    overflow            hidden
.tileImgDir                
    background-color    rgba(0,0,0,0.5)
.tileImgPlaylist
    background-color    rgba(100,0,0,0.7)
    
.tileSqrFile                
    padding             frameWidth
    overflow            hidden
    background-color    rgba(0,0,100,0.7)
    
.tileInput
    color               #fff
    background-color    rgba(0,0,0,0)
    padding             2px
    padding-left        frameWidth
    border              none
    margin-left         - frameWidth
    margin-right          frameWidth

