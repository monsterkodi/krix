frameColor            = #fff
frameBorder           = 6px solid frameColor

body
    color               frameColor
    
.titlebar
    background          frameColor
    color               #aaa

#split
    border-left         frameBorder
    border-right        frameBorder
    
.gutter
    background          frameColor
    
.logview
    background          frameColor
    color               #000 
.main
    background          frameColor
    color               #fff 
    
.logview
    border-bottom       frameBorder

.ctrl
    background          #fff

.button     
    color               #ccc
    background          #eee

.fa-play 
    color               #aaa

.buttonActive     
    color               #88f
.buttonInactive     
    color               #ccc

.fa-play:hover    
.button:hover            
    color               #000
.button:active           
    background          #fff
    
.label
    color               #ccc
    
.popup
    background-color    #fff

.popupWindow
    background-color    #fff
    
.popupItem
    color               #444
    &:not(:last-child)
        border-bottom       1px solid #eee
    &.selected
        color           #000

.popupItem:active
    color               #88f

.popupCombo
    color               #ddd

.tiles
    background          #fff

.tileSqrDir                 
    background-color    rgba(0,0,0,0.7)
.tileSqrPlaylist
    background-color    rgba(255,0,0,0.5)
    
// focus tile border color
    
.tilePadFocus               
    background-color        #44a
    &.tilePadDir    
        background-color    #333
    &.tilePadPlaylist 
        background-color    #a00
    
.tileArtist                 
    color               #88f

.tileTitle
    color               #fff

.tileChild
    color               #fa0
    
.playlistInfo
    color               #b00
    
.tileImg
    background-color    rgba(0,0,100,0.5)

.tileImgDir                
    background-color    rgba(0,0,0,0.5)
    
.tileImgPlaylist
    background-color    rgba(100,0,0,0.7)
    
.tileSqrFile                
    background-color    rgba(0,0,100,0.7)
    
.tileInput
    color               #fff
    background-color    rgba(0,0,0,0)

.song
    background-color    #fff
    
.songInfo
    background          rgba(255,255,255,0)
    
.songElapsed
.songDuration
    color               #ddd
    background          rgba(255,255,255,0.9)

.waveLine 
    background-color    rgba(0,0,0,0.14)

.waveBlend
    background-color    rgba(255,255,255,0.6)

.wave
    background-color    white
    background-blend-mode difference
        
@keyframes highlight
    0%,100%   
        color           rgb(16,16,16)
    50%  
        color           rgb(255,255,255)
    
::-webkit-scrollbar-corner
    background-color        #eee

::-webkit-scrollbar-thumb
    background-color        #ccc

::-webkit-scrollbar-thumb:hover
    background-color        #888
    